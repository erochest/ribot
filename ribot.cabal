    , old-locale >=1.0.0.2 && < 2
    , containers >= 0.4.0.0 && < 0.5
  if flag(development)
    cpp-options: -DDEVELOPMENT
    ghc-options: -DEVELOPMENT -threaded -w
  else
    if impl(ghc >= 6.12.0)
      ghc-options: -threaded -Wall -fwarn-tabs -funbox-strict-fields -O2
                   -fno-warn-orphans -fno-warn-unused-do-bind -fstatic
