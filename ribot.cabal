  hs-source-dirs:     src
  exposed-modules:
      Database.Ribot
    , Network.Ribot.Irc
    , Network.Ribot.Types
    , Network.Ribot.Search
    , Network.Ribot.Utils
    , Text.Ribot.Search
    , Text.Ribot.Tokenizer
